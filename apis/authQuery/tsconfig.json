{
  "compilerOptions": {
    "lib": ["es2016"],
    "target": "es6",
    "module": "commonjs",
    "resolveJsonModule": true,
    "esModuleInterop": true,
    "sourceMap": true,
    "outDir": "dist",
    "moduleResolution": "node",
    "strict": true,
    "declaration": true,
    "declarationDir": "./types"
  },
  "exclude": ["node_modules", "dist", "**/*.d.ts"],
  "typeRoots": ["node_modules/@types"]
}
